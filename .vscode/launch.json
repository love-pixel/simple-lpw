    "version": "0.2.0",
    "configurations": [
        {
            "name": "windows",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\example\\a.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
